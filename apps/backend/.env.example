# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# Database Connection
DATABASE_URL=mongodb://localhost:27017/property-management
# or for PostgreSQL: postgresql://username:password@localhost:5432/property-management

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret

# External Services
AZURE_AI_SERVICES_URL=http://localhost:7071/api
AZURE_AI_SERVICES_API_KEY=your-ai-services-key

# File Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=property-documents

# Email Service
EMAIL_FROM=noreply@property-management.com
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
