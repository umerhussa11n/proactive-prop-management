# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_ENV=development

# Database Connection
DATABASE_URL=mongodb://localhost:27017/property-management
# or for PostgreSQL: postgresql://username:password@localhost:5432/property-management

# Authentication (NextAuth.js or similar)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key
GITHUB_ID=your-github-oauth-app-id
GITHUB_SECRET=your-github-oauth-app-secret

# External APIs
AZURE_AI_SERVICES_URL=http://localhost:7071/api
AZURE_AI_SERVICES_API_KEY=your-ai-services-key

# File Upload
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Email Service (optional)
EMAIL_FROM=noreply@property-management.com
SENDGRID_API_KEY=your-sendgrid-api-key

# Application Settings
LOG_LEVEL=info
ENABLE_ANALYTICS=false
